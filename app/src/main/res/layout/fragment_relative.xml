<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.RelativeFragment"
    android:id="@+id/fragment_relative">

    <View
        android:id="@+id/rect_1"
        android:layout_width="144dp"
        android:layout_height="282dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#ccc" />

    <View
        android:id="@+id/rect_2"
        android:layout_width="144dp"
        android:layout_height="282dp"
        android:background="#f99"
        android:layout_below="@id/rect_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@id/seekBar"/>

    <View
        android:id="@+id/rect_3"
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:background="#ff9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/rect_1"/>

    <View
        android:id="@+id/rect_4"
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:background="#555"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/rect_3"
        android:layout_toRightOf="@id/rect_1"/>

    <View
        android:id="@+id/rect_5"
        android:layout_width="0dp"
        android:layout_height="188dp"
        android:layout_below="@id/rect_4"
        android:layout_above="@id/seekBar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/rect_2"
        android:background="#ff9" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="255"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>